{

  "env": {

    "es6": true,

    "node": true

  },

  "extends": "eslint:recommended",

  "parserOptions": {

    "ecmaVersion": 6,

    "sourceType": "module",

    "ecmaFeatures": {

      "impliedStrict": true

    }

  },

  "rules": {

    /* Stylistic Issues */

    // 禁止在括号内使用空格

    "array-bracket-spacing": ["error", "never"],

    // 强制在单行代码块中使用空格

    "block-spacing": ["error", "always"],

    // 大括号风格要求

    "brace-style": ["error", "1tbs"],

    // 强制在逗号后使用空格

    "comma-spacing": ["error", { "before": false, "after": true }],

    // 强制将逗号放置在当前行的末尾

    "comma-style": ["error", "last"],

    // 要求文件末尾保留一行空行

    "eol-last": ["error"],

    // 强制使用一致的缩进

    "indent": ["error", 4],

    // 要求在对象字面量的冒号和值之间存在且只有一个空格

    "key-spacing": ["error"],

    // 强制行的最大长度80

    "max-len": ["error", { "code": 80, "tabWidth": 4 }],

    // 要求构造函数首字母大写

    "new-cap": ["error"],

    // 禁止使用按位操作符

    "no-bitwise": ["error"],

    // 禁止 if 语句作为唯一语句出现在 else 语句块中

    "no-lonely-if": ["error"],

    // 禁止使用 空格 和 tab 混合缩进

    "no-mixed-spaces-and-tabs": ["error"],

    // 不允许多个空行

    "no-multiple-empty-lines": ["error"],

    // 禁止使用 Object 构造函数

    "no-new-object": ["error"],

    // 禁止使用 Array 构造函数

    "no-array-constructor": ["error"],

    // 禁止 function 标识符和应用程序之间有空格

    "no-spaced-func": ["error"],

    // 禁用行尾空格

    "no-trailing-spaces": ["error"],




    /* Possible Errors */

    // 要求使用拖尾逗号

    // "comma-dangle": ["error", "always-multiline"],

    // 启用 console

    "no-console": ["off"],



    /* Best Practices */

    // 强制数组方法的回调函数中有 return 语句

    "array-callback-return": ["error"],

    // 把 var 语句看作是在块级作用域范围之内

    "block-scoped-var": ["error"],

    // 要求遵循大括号约定

    "curly": ["error", "multi-line"],

    // 点号操作符应该和属性在同一行

    "dot-location": ["error", "property"],

    // 要求尽可能使用点号来访问属性

    "dot-notation": ["error"],

    // 要求使用 === 和 !==

    "eqeqeq": ["error"],



    /* Strict Mode */

    "strict": ["error", "global"],



    /* Variables */

    // 强制变量初始化

    "init-declarations": ["error", "always"],

    // 禁止定义前使用

    "no-use-before-define": ["error"]



    /* Node.js and CommonJS */

    // 禁止对 __dirname 和 __filename进行字符串连接

    // "no-path-concat": ["error"],

  }

}
